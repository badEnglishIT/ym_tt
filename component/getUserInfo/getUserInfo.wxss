/* component/getUserInfo/getUserInfo.wxss */
.murky{
  position:fixed;
  bottom: 0;
  left: 0;
  width:100%;
  height:100%;
  text-align:center;
  background:rgba(0,0,0,0.6);
  filter:Alpha(opacity=60);
  z-index:9;
}
.login{
  position: fixed;
  top: 30%;
  left: 20%;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  width: 60vw;
  height: 30vh;
  z-index: 99;
}
.logInfo{
  padding: .5rem 1rem;
  font-size: .7rem;
  color: #a7a7a7;
}
.logInfo view{
  text-align: center;
  margin-bottom:.5rem; 
}
.logBtn{
  width: 100%;
  color: #1AAD19;
  border-radius: none;
}