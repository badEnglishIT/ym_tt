.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #DBBA91;
  height:250rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border: 2px solid #fff;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #575757;
  font-size: .8rem;
}

.usermotto {
  margin-top: 20px;
}
