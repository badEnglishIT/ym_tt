}
.sub_file{
  width: 100%;
  padding: 0 .5rem;
  box-sizing: border-box;
  margin: .3rem 0;
  /* border-bottom: 1px solid #ccc; */
  line-height: 33px;
  font-size: .7rem;
  color: #696969;
  background-color: #fff;
}
.sub_file text{
  float: right;
  color: #ccc;
}
.btn_file{
  width: 95%;
  margin: 0 auto;
  border-bottom: 1px solid #ccc; 
  line-height: 40px;
  font-size: .7rem;
