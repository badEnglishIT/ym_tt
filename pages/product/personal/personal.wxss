.payment{
  width: 20%;
  height: 4rem;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 8px;
  float: left;
}
.payment image{
  width: 2rem;
  height: 2rem;
}
.payment text{
  display: block;
  color: #8a8a8a;
}
.main{
  width: 100%;
  background-color: #F1F0EB;
  padding-top: 10px;
  clear: both;
}
.mian_sub{
  height: 100%;
