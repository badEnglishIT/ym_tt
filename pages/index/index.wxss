.page{
  padding: 1rem 1rem .5rem 1rem;
  box-sizing: border-box;
  background: linear-gradient(to bottom,#DCDCDD 0%,#fff 70%);
}
.cardlist{
  width: 2rem;
  height: 1.2rem;
  position: fixed;
  top: 1%;
  background:rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0 .6rem .6rem 0;
  z-index: 11;
}
.icon-qiabao_xianxing{
  color: #fff;
  font-size: 18px;
}
.card{
  position: relative;
  background: peru;
  border-radius: .5rem;
  box-shadow:0px 0px  10px 3px #a7a7a7;
  padding: 1rem;
  box-sizing: border-box;
}
.card .comp{
  display: flex;
  position: absolute;
  right: 14px;
  top: 8px;
}
.card .comp text{
  font-size: .7rem;
  margin-left: .4rem;
  color: #575757;
}
.card .comp image{
  width: 1rem;
  height: 1rem;
}
.card .person{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.card .person view{
  margin-left: 1rem;
  display: flex;
  flex-flow: column nowrap;
  color:#E2D27E;
}
.card image{
  /* width: 100%; */
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  display: block;
  /* height: 21rem; */
  /* border-radius: .4rem; */
}
.card_info{
  margin-top: .5rem;
  font-size: .8rem;
  color: #575757;
  /* display: flex;
  align-items: center;
  padding: 0 .5rem;
  box-sizing: border-box; */
}
.card_info view{
  width: 100%;
  line-height: 1.3rem;
  display: flex;
  align-items: center;
}
.card_info icon{
  display: flex;
  align-items: center;
}
.card_info text{
  width: 90%;
  display: inline-block;
  padding-left: .5rem;
  box-sizing: border-box;
}
/* .card_info view{ width: 50%;}
.card_info .n{font-size: 1rem}
.card_info .j{font-size: .7rem;margin-left:.5rem;}
.card_info .p{font-size: .8rem;color: #575757;margin-top:.5rem;width: 100%;} */
.card_info image{
  width: 1.8rem;height: 1.8rem;
  box-shadow:0px 0px  2px 1px #DCDCDD;
  padding: .2rem;
}

.chat{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  border: 1rpx solid #DCDCDD;
  background: rgba(255,255,255,.8);
  position: fixed;
  top:70%;
  right: 5.5%;
}
.chat text{
  font-size: .5rem;
  color: #575757;
}
.chat .icon-icon--{
  display: flex;
  font-size: .8rem;
  color: #1AAD19;
}

.more{
  width: 100%;
  height: 2rem;
  text-align: center;
  line-height: 2rem;
  font-size: .7rem;
  color: #575757;
}
.more .icon-jiantouxia,.more .icon-icon_arrow_top{
  margin-left: .5rem;
}
.more_info{
  background: #f7f7f7;
  margin-bottom: 1rem;
}
.more_info>view{
  display: flex;
  align-items: center;
  width: 100%;
  font-size: .8rem;
  color: #575757;
  min-height: 2.5rem;
  /* border: 1px solid #575757; */
}
.more_info .t1{
  display: inline-block;
  width: 20%;
  text-align: center;
  color: #a7a7a7;
  /* background: palegoldenrod; */
}
.more_info .t2{
  display: inline-block;
  width: 60%;
  min-height: 1rem;
  padding:0 1rem 0 0; 
  /* background: paleturquoise; */
}
.more_info .t3{
  display: inline-block;
  width: 15%;
  height: 1.4rem;
  line-height: 1.4rem;
  border: 1px solid #1AAD19;
  color: #1AAD19;
  margin-right: 5%;
  box-sizing: border-box;
  border-radius: .2rem;
  text-align: center;
  /* background: palevioletred; */
}
.share{
  width: 100%;
  padding: 0 1rem;
  box-sizing: border-box;
  margin: 0.5rem auto;
  display: flex;
  justify-content: space-between;
}
.share text{
  display: inline-block;
  width: 45%;
  border: 1px solid #1AAD19;
  text-align: center;
  font-size: .8rem;
  padding: .8rem 0;
  box-sizing: border-box;
  border-radius: .4rem;
}
.share text:first-child{
  color: #1AAD19;
}
.share text:last-child{
  color: #fff;
  background: #1AAD19;
  border: none;
}
.like{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 1rem;
  box-sizing: border-box;
  margin:.5rem 0;
}
.like .m{
  width: 50%;
}
.like .m view{
  display: flex;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.like .m image{
  width: 1rem;height: 1rem;
  margin-left: .2rem;
}
.like .m text{
  margin-left: .2rem;
  color: #575757;
  font-size: .8rem;
}
.like .l{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.like .l text{
  margin-right: .2rem;
  color: #575757;
  font-size: .8rem;
}
.cont{
  background: #f5f5f5;
  padding-top:.5rem;
}
.my_info{
  padding: .5rem 1rem;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: .5rem;
}
.my_info text,.photo text{
  display: block;
  font-size: .8rem;
  line-height: 1.2rem;
}
.my_info text:first-child,.photo text:first-child{
  font-weight: 600;
  padding: .5rem 0;
}
.photo image{
  /* max-width: 100%;
  max-height: 100%; */
  width: 100%;
  margin-bottom: .5rem;
}
/* 点赞动画 */
.like .l .icon-28dianzanfill{
  transform: scale(1.1);
}
/* 分享方式 */
.shareWay{
  position: fixed;
  bottom: -120px;
  left: 0;
  width: 100%;
  height: 120px;
  background: #fff;
  display: flex;
  z-index: 10;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items:center;
}
.shareWay view{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items:center;
}
.shareWay view icon{
  font-size: 3rem;
  color: #44C55D;
}
.shareWay view text{
  font-size: .8rem;
}