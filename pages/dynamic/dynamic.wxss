/* pages/dynamic/dynamic.wxss */
@import "/app.wxss";
/* 页面 */
page{
  background: #fff;
}
.dynamic{
  display: flex;
  padding: .8rem;
  box-sizing: border-box;
  border-bottom:1rpx solid #d3d3d3;
}
.dynamic>image{
  width: 3rem;
  height: 3rem;
  margin-right: .8rem;
}
.box{
  width: 80%;
}
.box .a{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: .4rem;
}
.box .t{
  font-size: .9rem;
  margin-bottom:.5rem; 
}
.box .p{
  margin-top: .5rem;
  width: 100%;
}
.box .p image{
  max-width: 60%;
  max-height: 10rem;
}
.box .f{
  width: 90%;
}
.box .f image{
  max-width: 6rem;
  height: 6rem;
  margin: 0 .4rem .4rem 0;
}
.box .m{
  margin-top: .5rem;
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: start;
  align-items: center;
}
.box .m image{
  width: 30%;
  height: 5rem;
  margin: 0 .4rem .4rem 0;
}
.box .pl{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.box .pl text{
  font-size: .8rem;
  color: #6F6F6F;
}
.box .pl image{
  width: 1rem;
  height: .8rem;
}
.box .ly{
  width: 100%;
  background: #F3F3F5;
  position: relative;
  margin-top:.5rem;
  padding: .3rem;
  box-sizing: border-box;
}
.box .ly::before{
  content: '';
    display: inline-block;
    width: 0;
    height: 0;
    border: 8px solid transparent;
    border-bottom: 8px solid #F3F3F5;
    position: absolute;
    top: -16px;
    left: 10px;
}
.box .ly .like{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  font-size: .8rem;
  font-weight:600;
  color: #626F9C;
  padding-bottom: .2rem;
  box-sizing: border-box;
}
.box .ly .like icon{
  display: flex;
  align-items: center;
  margin-right: .3rem;
}
.box .ly .message{
  padding-top:.2rem;
  box-sizing: border-box; 
  border-top: 1rpx solid #ccc;
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}
.box .ly .message view{
  font-size: .8rem;
  margin-bottom: .2rem;
}
.box .ly .message view text{
  color: #626F9C;
  font-weight:600;
}


